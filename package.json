{
  "name": "tree-sitter-ocaml",
  "version": "0.22.0",
  "description": "OCaml grammar for tree-sitter",
  "repository": "github:tree-sitter/tree-sitter-ocaml",
  "license": "MIT",
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "ocaml"
  ],
  "files": [
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "ocaml/grammar.js",
    "ocaml_interface/grammar.js",
    "ocaml_type/grammar.js",
    "ocaml/package.json",
    "ocaml_interface/package.json",
    "ocaml_type/package.json",
    "ocaml/src/**",
    "ocaml_interface/src/**",
    "ocaml_type/src/**",
    "common/**"
  ],
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.1"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.22.6"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip",
    "build": "npm run build-ocaml && npm run build-interface && npm run build-type",
    "build-ocaml": "cd ocaml && tree-sitter generate --no-bindings",
    "build-interface": "cd ocaml_interface && tree-sitter generate --no-bindings",
    "build-type": "cd ocaml_type && tree-sitter generate --no-bindings",
    "build-wasm": "npm run build-wasm-ocaml && npm run build-wasm-interface && npm run build-wasm-type",
    "build-wasm-ocaml": "cd ocaml && tree-sitter build-wasm",
    "build-wasm-interface": "cd ocaml_interface && tree-sitter build-wasm",
    "build-wasm-type": "cd ocaml_type && tree-sitter build-wasm",
    "test": "npm run test-ocaml && npm run test-interface && npm run test-type && npm run test-highlight",
    "test-ocaml": "cd ocaml && tree-sitter test",
    "test-interface": "cd ocaml_interface && tree-sitter test",
    "test-type": "cd ocaml_type && tree-sitter test",
    "test-highlight": "tree-sitter test",
    "test-binding": "node --test bindings/node/binding_test.js",
    "parse": "tree-sitter parse",
    "parse-examples": "test/parse-examples.sh"
  },
  "tree-sitter": [
    {
      "scope": "source.ocaml",
      "path": "ocaml",
      "external-files": [
        "common/scanner.h"
      ],
      "file-types": [
        "ml"
      ],
      "injection-regex": "^(ocaml|ml)$",
      "highlights": "queries/highlights.scm",
      "locals": "queries/locals.scm",
      "tags": "queries/tags.scm"
    },
    {
      "scope": "source.ocaml.interface",
      "path": "ocaml_interface",
      "external-files": [
        "common/scanner.h"
      ],
      "file-types": [
        "mli"
      ],
      "injection-regex": "^ocaml_interface$",
      "highlights": "queries/highlights.scm",
      "locals": "queries/locals.scm",
      "tags": "queries/tags.scm"
    },
    {
      "scope": "source.ocaml.type",
      "path": "ocaml_type",
      "external-files": [
        "common/scanner.h"
      ],
      "file-types": [],
      "injection-regex": "^ocaml_type$",
      "highlights": "queries/highlights.scm",
      "locals": "queries/locals.scm",
      "tags": "queries/tags.scm"
    }
  ]
}
